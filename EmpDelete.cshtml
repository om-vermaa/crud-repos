@model employee1.Models.t_employee

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Delete Record</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Employee Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.emp_name)
        </dd>

        <dt>
            Employee Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.emp_email)
        </dd>

        <dt>
            Employee Phone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.emp_phone)
        </dd>

        <dt>
            Designation
        </dt>

        <dd>
            @Html.DisplayFor(model => model.emp_designation)
        </dd>

        <dt>
            Experience
        </dt>

        <dd>
            @Html.DisplayFor(model => model.emp_experience)
        </dd>

        <dt>
            Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.emp_address)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" onclick="checkForconfirmation()" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "EmpList")
        </div>
    }
</div>
<script type="text/javascript">
    function checkForconfirmation() {
        var d = confirm("Your Record will be deleted..");
        return d;
    }
    </script>
